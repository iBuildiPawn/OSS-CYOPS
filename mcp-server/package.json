{
  "name": "cyops-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for CYOPS vulnerability management platform",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "cyops-mcp-server": "./dist/index.js"
  },
  "scripts": {
    "start": "node dist/index.js",
    "start:http": "node dist/http-server.js",
    "dev": "tsx watch src/index.ts",
    "dev:http": "tsx watch src/http-server.ts",
    "build": "tsc",
    "clean": "rm -rf dist"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "cybersecurity",
    "vulnerability-management",
    "cyops"
  ],
  "author": "CYOPS Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.6.1",
    "axios": "^1.7.9",
    "cors": "^2.8.5",
    "eventsource": "^4.0.0",
    "express": "^4.21.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}

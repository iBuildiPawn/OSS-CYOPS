# Example .env file for deploying from Docker registry
# Copy this to .env and fill in your values

# ============================================
# Docker Registry Configuration
# ============================================
# Your Docker Hub username or private registry URL
DOCKER_REGISTRY=yourusername
# Image version to pull (latest, v1.0.0, etc.)
IMAGE_TAG=latest

# ============================================
# Database Configuration
# ============================================
DB_NAME=cyops_production
DB_USER=cyops_user
DB_PASSWORD=change_this_secure_password

# PostgreSQL SSL mode (disable, require, verify-ca, verify-full)
DB_SSL_MODE=disable

# ============================================
# Redis Configuration
# ============================================
# Optional: Set a password for Redis
REDIS_PASSWORD=change_this_redis_password

# ============================================
# Security Configuration (REQUIRED)
# ============================================
# Generate secure random values for these:
# You can use: openssl rand -base64 32

# JWT secret (minimum 32 characters)
JWT_SECRET=your_jwt_secret_min_32_chars_change_this

# Session secret (minimum 32 characters)
SESSION_SECRET=your_session_secret_min_32_chars_change_this

# Encryption key (exactly 32 characters for AES-256)
ENCRYPTION_KEY=your_32_char_encryption_key_here

# ============================================
# Admin Account Configuration
# ============================================
ADMIN_EMAIL=admin@yourcompany.com
ADMIN_PASSWORD=YourSecurePassword123!
ADMIN_NAME=System Administrator

# ============================================
# Application Configuration
# ============================================
# Environment (production recommended)
GO_ENV=production
NODE_ENV=production

# CORS Origins (your domain URLs, comma-separated)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Public API URL (empty = use relative paths through NGINX proxy)
NEXT_PUBLIC_API_URL=

# ============================================
# Email Configuration (Optional)
# ============================================
# SMTP settings for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@yourcompany.com

# ============================================
# MCP Server Configuration (Optional)
# ============================================
# API key/token for MCP server authentication
CYOPS_API_KEY=
CYOPS_API_TOKEN=
